<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_pesquisas">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        android:onClick="btn_voltar"
        android:clickable="true"
        android:enabled="true"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Pesquisar por Nome"
        android:id="@+id/textView"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignTop="@+id/imageButton3"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Pesquisar por Disciplina"
        android:id="@+id/textView3"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:layout_alignBottom="@+id/imageButton2"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Pesquisar por Matrícula"
        android:id="@+id/textView2"
        android:layout_above="@+id/button2"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_marginBottom="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/logo_pesquisas_footer"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:background="@drawable/logo_pesquisas"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton3"
        android:background="@drawable/btn_pesquisa"
        android:layout_above="@+id/imageButton2"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:contextClickable="false"
        android:focusable="true"
        android:onClick="btn_pesqMatricula" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:background="@drawable/btn_pesquisa"
        android:layout_above="@+id/imageButton"
        android:layout_centerHorizontal="true"
        android:clickable="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:background="@drawable/btn_pesquisa"
        android:baselineAlignBottom="false"
        android:clickable="true"
        android:onClick="btn_pesqMatricula"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Escolha uma opção:"
        android:id="@+id/textView4"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>